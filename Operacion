package prOrdVirtual;

import java.util.List;

public class Operacion {

	private String operador;
	private Prioridad p;
	private List<Dato> lDatos;

	public Operacion(String op, List<Dato> l) {
		operador = op;
		lDatos = l;
	}

	public List<Dato> IDatos() {
		return this.lDatos;
	}

	public void operacion(List<Dato> l) {
		lDatos = l;
	}

	public String operador() {
		return this.operador;
	}

	public void operacion(String op) {
		operador = op;
	}

	public String toString() {
		
		String aux = "";
		for(Dato d: lDatos){
			aux = aux + d + " " + operador + " " ;
		}
		aux = aux.substring(0, aux.length()-3);
		return aux;
	}
}
