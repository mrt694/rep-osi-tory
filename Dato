package prOrdVirtual;

public class Dato<T> {

	private T dato;

	public Dato(T d) {
		dato = d;

	}

	public T dato() {

		return dato;
	}

	public void dato(T d) {
		dato = d;
	}

	public int getSize() {

		int val = 0;

		if (dato.getClass().equals(int.class)) {
			val = 4;
		} else if (dato.getClass().equals(byte.class)) {
			val = 1;
		} else if (dato.getClass().equals(float.class)) {
			val = 4;
		} else if (dato.getClass().equals(char.class)) {
			val = 2;
		} else if (dato.getClass().equals(short.class)) {
			val = 2;
		} else if (dato.getClass().equals(long.class)) {
			val = 8;
		} else if (dato.getClass().equals(double.class)) {
			val = 8;
		} else if (dato.getClass().equals(boolean.class)) {
			val = 1;
		}
		return val;
	}
